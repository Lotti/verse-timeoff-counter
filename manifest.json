{
  "description": "Add TimeOff counter capabilities to Verse Calendar",
  "manifest_version": 2,
  "name": "Verse TimeOff Counter",
  "version": "0.0.1",
  "homepage_url": "https://github.ibm.com/valerio-riva/verse-timeoff-counter",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "webRequest",
    "https://mail.notes.collabservintegration.com/verse*",
    "https://mail.notes.na.collabserv.com/verse*",
    "https://mail.notes.ap.collabserv.com/verse*",
    "https://mail.notes.ce.collabserv.com/verse*",
    "https://mail.notes.scniris.com/verse*",
    "https://mail.notes.collabservsvt2.swg.usma.ibm.com/verse*",
    "https://llc1mail.notes.collabservsvt1.swg.usma.ibm.com/verse*"
  ],
  "background": {
    "scripts": [
      "background/requestMonitor.js"
    ]
  },
  "content_scripts": [
    {
      "run_at": "document_idle",
      "css": [
        "style.css"
      ],
      "js": [
        "js/libs/purify.min.js",
        "js/libs.js",
        "js/main.js"
      ],
      "matches": [
        "https://mail.notes.collabservintegration.com/verse*",
        "https://mail.notes.na.collabserv.com/verse*",
        "https://mail.notes.ap.collabserv.com/verse*",
        "https://mail.notes.ce.collabserv.com/verse*",
        "https://mail.notes.scniris.com/verse*",
        "https://mail.notes.collabservsvt2.swg.usma.ibm.com/verse*",
        "https://llc1mail.notes.collabservsvt1.swg.usma.ibm.com/verse*"
      ]
    }
  ],
  "content_security_policy": "default-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'",
  "icons": {
    "512": "icons/icon-512.png"
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "512": "icons/icon-512.png"
    },
    "default_title": "Verse TimeOff Counter",
    "default_popup": "build/index.html"
  }
}
